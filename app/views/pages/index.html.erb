<div class="top">
  <div class="eye-catch" style="background-color: #730E15; height: 400px">
    <%= button_to '/auth/twitter', class: 'ui twitter button', method: :get do %>
      <i class="twitter icon"></i> Twitterでログイン
    <% end %>
  </div>
  <div class="ui unstackable divided items">
    <div class="ui header">最近登録された人気ゲーム</div>
    <% @games.each do |g| %>
      <div class="item">
        <div class="ui tiny image">
          <%= link_to (image_tag(g[:data].image)), g[:data].url %>
        </div>
        <div class="content">
          <%= link_to g[:data].title, g[:data].url, class: "ui small header" %>
          <div class="meta">
            <span class="manufacturer"><%= g[:data].manufacturer %></span>
          </div>
          <div class="extra">
            <div><i class="user icon"></i><%= g[:count] %></div>
            <div><i class="star icon"></i><%= g[:average] %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>