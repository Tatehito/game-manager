<p id="notice"><%= notice %></p>

<%= image_tag(@user.image_url, class: "ui tiny avatar image") %>
<span class="ui header"><%= @user.user_name %></span>

<%= render 'games/link' %>

<% if @games.size == 0 %>
  <div>ゲームソフトが登録されていません。</div>
<% else %>
  <div class="ui six doubling cards">
    <% @games.each do |game| %>
      <div class="card">
          <%= link_to image_tag(game.image, style: "height:150px"), edit_game_path(game), style: "text-align:center" %>
        <div class="content">
          <%= link_to game.title, edit_game_path(game), class: "header", style: "vertical-align: inherit;" %>
          <div class="meta">
            <a><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">最後に見たのは2日前</font></font></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

