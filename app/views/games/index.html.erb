<p id="notice"><%= notice %></p>
<%= render 'layouts/search' %>

<h1>Games</h1>

<% @games.each do |game| %>
  <div><%= image_tag(game.image, style: "width: 70px;height: 100px;display: inline-block;") %></div>
  <div class="title"><%= game.title %></div>
  <div><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></div>
<% end %>
