<!DOCTYPE html>
<html>
  <head>
    <title>GameManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <%= link_to 'ログアウト', '/signout' %>
      <% else %>
        <%= link_to 'ログイン', '/auth/twitter' %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
