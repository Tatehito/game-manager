<div class="ui attached secondary menu">
  <%= link_to 'ゲームメーター', root_path, class: "large header item" %>
  <div class="right menu">
    <% if logged_in? %>
      <%= link_to 'Logout', '/signout', class: "ui item" %>
    <% else %>
      <%= link_to 'Log-in', '/auth/twitter', class: "ui item" %>
    <% end %>
  </div>
</div>

<div class="ui attached mobile only segment">
  <%= form_tag("/search", method: "get") do %>
    <div class="ui fluid mini action input">
      <input type="text" id="search_word" name="search_word" placeholder="Amazonで検索">
      <button class="ui icon button">
        <i class="search icon"></i>
      </button>
    </div>
  <% end %>
</div>