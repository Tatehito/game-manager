<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Asin</th>
      <th>Status</th>
      <th>Platform</th>
      <th>Evaluation</th>
      <th>Memo</th>
      <th>Play time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.uid %></td>
        <td><%= game.asin %></td>
        <td><%= game.status %></td>
        <td><%= game.platform %></td>
        <td><%= game.evaluation %></td>
        <td><%= game.memo %></td>
        <td><%= game.play_time %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

